@{
    ViewData["Title"] = "Home Page";
}

@*Brings in the model Book.cs as an IQueryable*@
@model IQueryable<Book> 

<div class="text-center">
   <h1>Sell and Buy Books</h1>
</div>

@*Iterates through each object created in the database/model*@
@foreach (var b in Model)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @b.Title
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>@b.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">
            Author: @b.AuthorFirst @b.AuthorLast
            <br />
            Publisher: @b.Publisher
            <br />
            Classification/Category: @b.Classification, @b.Category
        </div>
        
    </div>
}
