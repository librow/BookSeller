@* Sets up how each object will be displayed *@

@model Book

<div class="card bg-secondary text-light card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            Program Name: @Model.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small><p>$@Model.Price</p></small>
            </span>
        </h4>
        <p>Author: @Model.AuthorFirst @Model.AuthorLast</p>
        <div class="card-text text-light p-1">
            <p>Publisher: @Model.Publisher</p>
        </div>

        <p text-light>ISBN: @Model.ISBN</p>
        <p>Classification: @Model.Classification</p>
        <p>Category: @Model.Category</p>
        <p>Page Number Count: @Model.PageNum</p>
    </div>
    <form id="@Model.BookId" asp-page="/Purchase" method="post">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <input type="hidden" name="cartAction" value="remove" />
        <span class="card-text p-1">
            @Model.Title
            <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                Remove Item from Cart
            </button>
        </span>
    </form>
    <form id="@Model.BookId" asp-page="/Purchase" method="post">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <input type="hidden" name="cartAction" value="add" />
        <span class="card-text p-1">
            @Model.Title
            <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                Purchase
            </button>
        </span>
    </form>
</div>